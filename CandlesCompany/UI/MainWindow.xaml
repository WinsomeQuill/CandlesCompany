<Window x:Class="CandlesCompany.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CandlesCompany.UI" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Candle Company"
        MinHeight="400"
        Height="450"
        MaxHeight="900"
        MinWidth="750"
        Width="800"
        MaxWidth="1200">
    <Grid>
        <TabControl
            Style="{StaticResource MaterialDesignNavigatilRailTabControl}"
            TabStripPlacement="Top"
            HorizontalContentAlignment="Center">
            <TabItem>
                <TabItem.Header>
                    <StackPanel
                        Height="auto"
                        Width="auto">
                        <materialDesign:PackIcon
                            Kind="Account"
                            Width="34"
                            Height="34"
                            HorizontalAlignment="Center" />
                        <TextBlock
                            Text="Профиль"
                            HorizontalAlignment="Center" />
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="52*"/>
                        <RowDefinition Height="52*"/>
                        <RowDefinition Height="52*"/>
                        <RowDefinition Height="55*"/>
                        <RowDefinition Height="186*"/>
                    </Grid.RowDefinitions>
                    <TextBlock
                        Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                        Text="Inforamtion"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>

                    <TextBlock x:Name="TextBlockProfileName"
                        Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                        Text="%Last_Name% %First_Name% %Middle_Name%"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Grid.Row="1"/>

                    <TextBlock x:Name="TextBlockProfileEmail"
                        Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                        Text="Email: alexmaroni329@gmail.com"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Grid.Row="2"/>

                    <TextBlock x:Name="TextBlockProfilePhone"
                        Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                        Text="Phone: Null ? +79136484657"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Grid.Row="3"/>

                    <TextBlock x:Name="TextBlockProfileRole"
                        Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                        Text="Role: %Name%"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Grid.Row="4"/>
                </Grid>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel
                        Height="auto"
                        Width="auto">
                        <materialDesign:PackIcon
                            Kind="PackageVariantClosed"
                            Width="34"
                            Height="34"
                            HorizontalAlignment="Center" />
                        <TextBlock
                            Text="Заказы"
                            HorizontalAlignment="Center" />
                    </StackPanel>
                </TabItem.Header>
                <Grid>

                </Grid>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel
                        Height="auto"
                        Width="auto">
                        <materialDesign:PackIcon
                            Kind="Cart"
                            Width="34"
                            Height="34"
                            HorizontalAlignment="Center" />
                        <TextBlock
                            Text="Каталог"
                            HorizontalAlignment="Center" />
                    </StackPanel>
                </TabItem.Header>
                <Grid x:Name="GridCatalogItems">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="70*" MinWidth="200" MaxWidth="450"/>
                        <ColumnDefinition Width="100*"/>
                    </Grid.ColumnDefinitions>

                    <ListView x:Name="ListViewCatalog"
                              HorizontalContentAlignment="Center"
                              Grid.Column="0"/>
                </Grid>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel
                        Height="auto"
                        Width="auto">
                        <materialDesign:PackIcon
                            Kind="HelpCircleOutline"
                            Width="34"
                            Height="34"
                            HorizontalAlignment="Center" />
                        <TextBlock 
                            Text="Помощь"
                            HorizontalAlignment="Center" />
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="40*"/>
                        <RowDefinition Height="108*"/>
                        <RowDefinition Height="60"/>
                    </Grid.RowDefinitions>

                    <TextBlock
                        Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                        Text="Помощь"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>

                    <TextBox
                        materialDesign:HintAssist.Hint="Заголовок проблемы / вопроса"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        VerticalAlignment="Center"
                        Margin="30,0,30,0"
                        Grid.Row="1"/>

                    <TextBox x:Name="TextBoxSupportDescription"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        VerticalAlignment="Top"
                        Height="100"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        VerticalScrollBarVisibility="Auto"
                        materialDesign:HintAssist.Hint="Подробное описание проблемы или вопроса"
                        Margin="30,0,30,0"
                        Grid.Row="2"/>

                </Grid>
            </TabItem>

            <TabItem>
                <TabItem.Header>
                    <StackPanel
                        Height="auto"
                        Width="auto">
                        <materialDesign:PackIcon
                            Kind="AccountLock"
                            Width="34"
                            Height="34"
                            HorizontalAlignment="Center" />
                        <TextBlock 
                            Text="Админ"
                            HorizontalAlignment="Center" />
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="242*"/>
                        <ColumnDefinition Width="242*"/>
                        <ColumnDefinition Width="242*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="85*"/>
                        <RowDefinition Height="114*"/>
                        <RowDefinition Height="116*"/>
                        <RowDefinition Height="60"/>
                    </Grid.RowDefinitions>

                    <TextBlock
                        Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                        Text="Управление сотрудниками"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"/>

                    <Button x:Name="ButtonManagementAddEmployee"
                            Content="_Добавить сотрудника"
                            Grid.Column="0"
                            Grid.Row="1"
                            Margin="30,0,30,0"
                            Click="ButtonManagementAddEmployee_Click"/>

                    <Button x:Name="ButtonManagementChangeEmployee"
                            Content="_Изменить сотрудника"
                            Grid.Column="1"
                            Grid.Row="1"
                            Margin="30,0,30,0"
                            Click="ButtonManagementChangeEmployee_Click"/>

                    <Button x:Name="ButtonManagementRemoveEmployee"
                            Content="_Удалить сотрудника"
                            Grid.Column="2"
                            Grid.Row="1"
                            Margin="30,0,30,0"
                            Cursor="Hand"
                            Click="ButtonManagementRemoveEmployee_Click"/>

                    <TextBlock
                        Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                        Text="Управление каталогом"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Grid.Row="2"
                        Grid.Column="0"
                        Grid.ColumnSpan="3"/>

                    <Button x:Name="ButtonManagementAddItem"
                            Content="_Добавить товар"
                            Grid.Column="0"
                            Grid.Row="3"
                            Margin="30,0,30,0" Click="ButtonManagementAddItem_Click"/>

                    <Button x:Name="ButtonManagementChangeItem"
                            Content="_Изменить товар"
                            Grid.Column="1"
                            Grid.Row="3"
                            Margin="30,0,30,0" Click="ButtonManagementChangeItem_Click"/>

                    <Button x:Name="ButtonManagementRemoveItem"
                            Content="_Удалить товар"
                            Grid.Column="2"
                            Grid.Row="3"
                            Margin="30,0,30,0" Click="ButtonManagementRemoveItem_Click"/>

                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
