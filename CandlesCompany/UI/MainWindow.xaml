<Window x:Class="CandlesCompany.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CandlesCompany.UI" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Candle Company"
        MinHeight="400"
        Height="550"
        MaxHeight="900"
        MinWidth="1200"
        Width="1200"
        MaxWidth="1500">
    <Grid>
        <TabControl Style="{StaticResource MaterialDesignNavigatilRailTabControl}"
                    TabStripPlacement="Top"
                    HorizontalContentAlignment="Center">
            <TabItem>
                <TabItem.Header>
                    <StackPanel
                        Height="auto"
                        Width="auto">
                        <materialDesign:PackIcon
                            Kind="Account"
                            Width="34"
                            Height="34"
                            HorizontalAlignment="Center" />
                        <TextBlock
                            Text="Профиль"
                            HorizontalAlignment="Center" />
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="100"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                               Text="Личный профиль"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Grid.Row="0"/>

                    <TextBlock x:Name="TextBlockProfileName"
                               Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                               Text="%Last_Name% %First_Name% %Middle_Name%"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Grid.Row="2"/>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        
                        <Ellipse Width="100"
                                 Height="100"
                                 HorizontalAlignment="Right"
                                 Margin="0,0,10,0"
                                 Grid.Column="0"
                                 Grid.Row="0"
                                 Grid.RowSpan="2">

                            <Ellipse.Fill>
                                <ImageBrush x:Name="ImageBrushProfileAvatar"
                                            ImageSource="pack://application:,,,/CandlesCompany;component/Resources/Images/Users/default_avatar.png"/>
                            </Ellipse.Fill>
                        </Ellipse>

                        <Button x:Name="ButtonProfileSetAvatar"
                                Grid.Column="1"
                                Grid.Row="0"
                                Width="150"
                                HorizontalAlignment="Left"
                                Margin="10,0,0,0"
                                Content="_Выбрать фото"
                                Click="ButtonProfileSetAvatar_Click"/>

                        <Button x:Name="ButtonProfileRemoveAvatar"
                                Grid.Column="1"
                                Grid.Row="1"
                                Width="150"
                                HorizontalAlignment="Left"
                                Margin="10,0,0,0"
                                Content="_Удалить фото"
                                Click="ButtonProfileRemoveAvatar_Click"/>
                    </Grid>

                    <TextBlock x:Name="TextBlockProfileEmail"
                               Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                               Text="Email: alexmaroni329@gmail.com"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Grid.Row="3"/>

                    <TextBlock x:Name="TextBlockProfilePhone"
                               Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                               Text="Телефон: +79136484657"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Grid.Row="4"/>

                    <TextBlock x:Name="TextBlockProfileRole"
                               Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                               Text="Должность: %Name%"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Grid.Row="5"/>
                </Grid>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel
                        Height="auto"
                        Width="auto">
                        <materialDesign:PackIcon
                            Kind="PackageVariantClosed"
                            Width="34"
                            Height="34"
                            HorizontalAlignment="Center" />
                        <TextBlock
                            Text="Заказы"
                            HorizontalAlignment="Center" />
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <DataGrid x:Name="DataGridOrdersList"
                              IsReadOnly="True"
                              AutoGenerateColumns="True"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              ItemsSource="{Binding OrderList}">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="Номер заказа">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding FormatOrderID}"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Style="{StaticResource MaterialDesignDataGridTextColumnStyle}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <!--<DataGridTextColumn Header="Номер заказа" Binding="{Binding OrderID}" IsReadOnly="True"/>-->
                            <DataGridTextColumn Header="Дата создания" Binding="{Binding DateCreated}" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Название товара" Binding="{Binding NameItem}" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Цена за штуку" Binding="{Binding CountPrice}" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Общая цена" Binding="{Binding TotalPrice}" IsReadOnly="True"/>
                            <DataGridTextColumn Header="Количество" Binding="{Binding Count}" IsReadOnly="True"/>
                            <DataGridTemplateColumn Header="Статус заказа">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="1*"/>
                                                <RowDefinition Height="1*"/>
                                            </Grid.RowDefinitions>

                                            <ProgressBar Grid.Row="0"
                                                         Grid.Column="0"
                                                         HorizontalAlignment="Center"
                                                         VerticalAlignment="Center"
                                                         Width="130"
                                                         Height="5"
                                                         IsIndeterminate="{Binding ProgressBarAnimation}"
                                                         Value="{Binding ProgressBarValue}"
                                                         Foreground="{Binding ProgressBarForeground}"
                                                         Background="#dbdbdb"
                                                         BorderThickness="0"/>

                                            <TextBlock Grid.Column="0"
                                                       Grid.Row="1"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,0,0"
                                                       Style="{StaticResource MaterialDesignDataGridTextColumnStyle}"
                                                       Text="{Binding Status}"/>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Подробнее">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Button Grid.Column="0"
                                                    Grid.Row="0"
                                                    Margin="10,0,10,0"
                                                    Height="25"
                                                    FontSize="12"
                                                    Content="_Подробнее"/>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel
                        Height="auto"
                        Width="auto">
                        <materialDesign:PackIcon
                            Kind="PackageVariant"
                            Width="34"
                            Height="34"
                            HorizontalAlignment="Center" />
                        <TextBlock
                            Text="Корзина"
                            HorizontalAlignment="Center" />
                    </StackPanel>
                </TabItem.Header>
                <Grid x:Name="GridBasketItems">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20*"/>
                        <ColumnDefinition Width="8*"/>
                    </Grid.ColumnDefinitions>

                    <ListView x:Name="ListViewBasket"
                              HorizontalContentAlignment="Center"
                              Grid.Column="0"/>
                </Grid>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel
                        Height="auto"
                        Width="auto">
                        <materialDesign:PackIcon
                            Kind="Cart"
                            Width="34"
                            Height="34"
                            HorizontalAlignment="Center" />
                        <TextBlock
                            Text="Каталог"
                            HorizontalAlignment="Center" />
                    </StackPanel>
                </TabItem.Header>
                <Grid x:Name="GridCatalogItems">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="130*"/>
                        <ColumnDefinition Width="100*"/>
                    </Grid.ColumnDefinitions>

                    <ListView x:Name="ListViewCatalog"
                              HorizontalContentAlignment="Center"
                              Grid.Column="0"/>
                </Grid>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel
                        Height="auto"
                        Width="auto">
                        <materialDesign:PackIcon
                            Kind="HelpCircleOutline"
                            Width="34"
                            Height="34"
                            HorizontalAlignment="Center" />
                        <TextBlock 
                            Text="Помощь"
                            HorizontalAlignment="Center" />
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="40*"/>
                        <RowDefinition Height="108*"/>
                        <RowDefinition Height="60"/>
                    </Grid.RowDefinitions>

                    <TextBlock
                        Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                        Text="Помощь"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>

                    <TextBox
                        materialDesign:HintAssist.Hint="Заголовок проблемы / вопроса"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        VerticalAlignment="Center"
                        Margin="30,0,30,0"
                        Grid.Row="1"/>

                    <TextBox x:Name="TextBoxSupportDescription"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        VerticalAlignment="Top"
                        Height="100"
                        AcceptsReturn="True"
                        TextWrapping="Wrap"
                        VerticalScrollBarVisibility="Auto"
                        materialDesign:HintAssist.Hint="Подробное описание проблемы или вопроса"
                        Margin="30,0,30,0"
                        Grid.Row="2"/>

                </Grid>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <StackPanel
                        Height="auto"
                        Width="auto">
                        <materialDesign:PackIcon
                            Kind="AccountLock"
                            Width="34"
                            Height="34"
                            HorizontalAlignment="Center" />
                        <TextBlock 
                            Text="Админ"
                            HorizontalAlignment="Center" />
                    </StackPanel>
                </TabItem.Header>

                <Grid>
                    <TabControl Style="{StaticResource MaterialDesignNavigatilRailTabControl}"
                                TabStripPlacement="Top"
                                HorizontalContentAlignment="Center">
                        <TabItem Width="100">
                            <TabItem.Header>
                                <StackPanel Height="auto"
                                            Width="auto">
                                    <materialDesign:PackIcon Kind="AccountLock"
                                                             Width="34"
                                                             Height="34"
                                                             HorizontalAlignment="Center" />
                                    <TextBlock Text="Управление сотрудниками"
                                               TextWrapping="Wrap"
                                               HorizontalAlignment="Center" />
                                </StackPanel>
                            </TabItem.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="242*"/>
                                    <ColumnDefinition Width="242*"/>
                                    <ColumnDefinition Width="242*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="60"/>
                                    <RowDefinition Height="85*"/>
                                    <RowDefinition Height="114*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                                           Text="Управление сотрудниками"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Grid.Row="0"
                                           Grid.Column="0"
                                           Grid.ColumnSpan="3"/>

                                <Button x:Name="ButtonManagementAddEmployee"
                                        Content="_Добавить сотрудника"
                                        Grid.Column="0"
                                        Grid.Row="1"
                                        Margin="30,0,30,0"
                                        Click="ButtonManagementAddEmployee_Click"/>

                                <Button x:Name="ButtonManagementChangeEmployee"
                                        Content="_Изменить сотрудника"
                                        Grid.Column="1"
                                        Grid.Row="1"
                                        Margin="30,0,30,0"
                                        Click="ButtonManagementChangeEmployee_Click"/>

                                <Button x:Name="ButtonManagementRemoveEmployee"
                                        Content="_Удалить сотрудника"
                                        Grid.Column="2"
                                        Grid.Row="1"
                                        Margin="30,0,30,0"
                                        Cursor="Hand"
                                        Click="ButtonManagementRemoveEmployee_Click"/>

                            </Grid>
                        </TabItem>
                        <TabItem Width="100">
                            <TabItem.Header>
                                <StackPanel Height="auto"
                                            Width="auto">
                                    <materialDesign:PackIcon Kind="AccountLock"
                                                             Width="34"
                                                             Height="34"
                                                             HorizontalAlignment="Center" />
                                    <TextBlock Text="Управление товарами"
                                               TextWrapping="Wrap"
                                               HorizontalAlignment="Center" />
                                </StackPanel>
                            </TabItem.Header>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="242*"/>
                                    <ColumnDefinition Width="242*"/>
                                    <ColumnDefinition Width="242*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="60"/>
                                    <RowDefinition Height="85*"/>
                                    <RowDefinition Height="114*"/>
                                </Grid.RowDefinitions>


                                <TextBlock Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                                           Text="Управление каталогом"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           Grid.Row="0"
                                           Grid.Column="1"/>

                                <Button x:Name="ButtonManagementAddItem"
                                        Content="_Добавить товар"
                                        Grid.Column="0"
                                        Grid.Row="1"
                                        Margin="30,0,30,0" 
                                        Click="ButtonManagementAddItem_Click"/>

                                <Button x:Name="ButtonManagementChangeItem"
                                        Content="_Изменить товар"
                                        Grid.Column="1"
                                        Grid.Row="1"
                                        Margin="30,0,30,0" 
                                        Click="ButtonManagementChangeItem_Click"/>

                                <Button x:Name="ButtonManagementRemoveItem"
                                        Content="_Удалить товар"
                                        Grid.Column="2"
                                        Grid.Row="1"
                                        Margin="30,0,30,0" 
                                        Click="ButtonManagementRemoveItem_Click"/>

                            </Grid>
                        </TabItem>
                        <TabItem Width="100"
                                 Style="{StaticResource MaterialDesignNavigationRailTabItem}">
                            <TabItem.Header>
                                <StackPanel Height="auto"
                                            Width="auto">
                                    <materialDesign:PackIcon Kind="AccountLock"
                                                             Width="34"
                                                             Height="34"
                                                             HorizontalAlignment="Center" />
                                    <TextBlock Text="Управление пользователями"
                                               TextWrapping="Wrap"
                                               HorizontalAlignment="Center" />
                                </StackPanel>
                            </TabItem.Header>
                            <Grid>
                                <DataGrid x:Name="DataGridManagementUsersList"
                                          IsReadOnly="True">
                                    <DataGrid.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Click Me"/>
                                            <MenuItem Header="Click Me1"/>
                                            <MenuItem Header="Click Me2"/>
                                        </ContextMenu>
                                    </DataGrid.ContextMenu>
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Номер ааканта" Binding="{Binding UserID}"/>
                                        <DataGridTemplateColumn Header="ФИО" MinWidth="220" Width="230" MaxWidth="270">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="40"/>
                                                            <ColumnDefinition Width="210" MinWidth="100" MaxWidth="400"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Ellipse Width="40"
                                                                 Height="40"
                                                                 Grid.Column="0">
                                                            <Ellipse.Fill>
                                                                <ImageBrush ImageSource="{Binding UserAvatar}"/>
                                                            </Ellipse.Fill>
                                                        </Ellipse>
                                                        
                                                        <TextBlock Style="{StaticResource MaterialDesignDataGridTextColumnStyle}"
                                                                   Text="{Binding UserName}"
                                                                   Grid.Column="1"
                                                                   Margin="10,0,0,0"
                                                                   HorizontalAlignment="Left"
                                                                   VerticalAlignment="Center"/>
                                                    </Grid>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTextColumn Header="Почта" Binding="{Binding UserEmail}"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
